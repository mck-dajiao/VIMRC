" line enables syntax highlighting 
if has ("syntax")
    syntax on
endif

" set line number
set nu

" set code color scheme
colorscheme desert

" set tab
set tabstop=4

" set encoding standard
set encoding=utf8

" highlight search and increamt search 
set hlsearch
set incsearch

" auto read a file is changed outside vim
set autoread 

" enable filetype plugins
filetype plugin on
filetype indent on


